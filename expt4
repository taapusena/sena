4D:: /*D-PROBLEM STATEMENT: Interface WiFi ESP01/ESP8266 module with Arduino UNO/NANO and con-
trol four LEDs/Relays connected to Arduino board through WiFi module Access
Point (AP) without a router using BLYNK Cloud platform.*/
Algorithm
1. Start
2. Create a dashboard on Desktop/Laptop and mobile using the BLYNK app.
3. Include necessary header files required for initialization of ESP WiFi module.
4. Define necessary credentials of WiFi name and password
5. Include token ID generated from Blynk
6. Initialize the direction of the respective port pin as an output.
7. Initialize virtual/digital pin in Blynk as per pins
8. Capture the information captured through a virtual/digital pin and transfer
it to the respective port pin for control.
9. Run Blynk in a forever loop
10. Stop
// ---------------- Blynk template configuration ----------------
#define BLYNK_TEMPLATE_ID "TMPL3rRjMig6K"
#define BLYNK_TEMPLATE_NAME "Exp42"
#define BLYNK_AUTH_TOKEN "8-bzOS-e-s-nmkSeHHZEmVlhIHqfq4R7"

// ---------------- Libraries ----------------
#include <SoftwareSerial.h>
#include <ESP8266_Lib.h>
#include <BlynkSimpleShieldEsp8266.h>

// ---------------- WiFi credentials ----------------
char ssid[] = "AK";
char pass[] = "12345678";

// Blynk authentication
char auth[] = BLYNK_AUTH_TOKEN;

// ---------------- SoftwareSerial for ESP ----------------
SoftwareSerial EspSerial(2, 3); // RX, TX pins for ESP8266
ESP8266 wifi(&EspSerial);

// ---------------- Relay pins ----------------
#define RELAY1 8
#define RELAY2 9
#define RELAY3 10
#define RELAY4 11

void setup()
{
  // Start Serial for debugging
  Serial.begin(9600);
  delay(1000);
  Serial.println("=== Arduino UNO + ESP8266 Relay Control ===");

  // Start ESP8266 serial (match ESP baud rate!)
  EspSerial.begin(9600);
  delay(1000);
  Serial.println("ESP8266 Serial started at 9600");

  // Init relay pins
  pinMode(RELAY1, OUTPUT);
  pinMode(RELAY2, OUTPUT);
  pinMode(RELAY3, OUTPUT);
  pinMode(RELAY4, OUTPUT);

  // Turn OFF all relays initially
  digitalWrite(RELAY1, LOW);
  digitalWrite(RELAY2, LOW);
  digitalWrite(RELAY3, LOW);
  digitalWrite(RELAY4, LOW);

  // Connect to Blynk
  Serial.println("Connecting to Blynk...");
  Blynk.begin(auth, wifi, ssid, pass);
  Serial.println("System Ready!");
}

void loop()
{
  Blynk.run();
}

// ---------------- Blynk Virtual Pins ----------------
BLYNK_WRITE(V1) { digitalWrite(RELAY1, param.asInt()); }
BLYNK_WRITE(V2) { digitalWrite(RELAY2, param.asInt()); }
BLYNK_WRITE(V3) { digitalWrite(RELAY3, param.asInt()); }
BLYNK_WRITE(V4) { digitalWrite(RELAY4, param.asInt()); }



